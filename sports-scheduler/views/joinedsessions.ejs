<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>
        <%= title %>
    </title>
</head>

<body>
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-center text-gray-700 text-3xl font-bold mb-8">
            <%= title %>
        </h1>
        <a href="/player" class="text-blue-500">Back</a>

        <% if (data.length===0) { %>
            <p class="text-center text-gray-500 mt-8">No sessions available.</p>
            <% } else { %>
                <div class="flex flex-wrap mt-8">
                    <% data.forEach(session=> { %>
                        <% const hasJoined=session.joined ? session.joined.includes(loggedInUser) : false; %>
                            <% if (hasJoined) { %>
                                <% if (session.cancel_status) { %>
                                    <div class="bg-white shadow-md rounded-lg p-4 w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
                                        <h2 class="text-center text-lg font-bold mb-2">
                                            <%= session.id %>
                                                <% if (session.sport_name) { %><span class="text-sm text-gray-500 ml-2">
                                                        <%= session.sport_name %>
                                                    </span>
                                                    <% } %>
                                        </h2>
                                        <div class="mb-2">
                                            <span class="font-bold">Venue:</span>
                                            <span class="ml-1">
                                                <%= session.venue %>
                                            </span>
                                        </div>
                                        <div class="mb-2">
                                            <span class="font-bold">Number of Teams:</span>
                                            <span class="ml-1">
                                                <%= session.teamcount %>
                                            </span>
                                        </div>
                                        <div class="mb-2">
                                            <span class="font-bold">Number of Players:</span>
                                            <span class="ml-1">
                                                <%= session.playercount %>
                                            </span>
                                        </div>
                                        <div class="mb-2">
                                            <span class="font-bold">Player Names:</span>
                                            <span class="ml-1">
                                                <%= session.playernames %>
                                            </span>
                                        </div>
                                        <div class="mb-2">
                                            <span class="font-bold">Time:</span>
                                            <span class="ml-1">
                                                <%= session.time.toISOString() %>
                                            </span>
                                        </div>
                                        <div class="mb-2">
                                            <span class="font-bold">Organizer:</span>
                                            <% const organizerIndex=userIds.indexOf(session.userId); %>
                                                <span class="ml-1">
                                                    <%= organizerIndex !==-1 ? usernames[organizerIndex]
                                                        : 'Unknown Organizer' %>
                                                </span>
                                        </div>
                                        <div class="text-center text-green-500 font-bold">Joined</div>
                                        <div class="text-center text-red-500 font-bold mt-4">Sorry, this session has
                                            been cancelled due to the following reason:</div>
                                        <div class="text-center">
                                            <%= session.cancelled_reason %>
                                        </div>
                                    </div>
                                    <% } else { %>
                                        <div
                                            class="bg-white shadow-md rounded-lg p-4 w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
                                            <h2 class="text-center text-lg font-bold mb-2">
                                                <%= session.id %>
                                                    <% if (session.sport_name) { %><span
                                                            class="text-sm text-gray-500 ml-2">
                                                            <%= session.sport_name %>
                                                        </span>
                                                        <% } %>
                                            </h2>
                                            <div class="mb-2">
                                                <span class="font-bold">Venue:</span>
                                                <span class="ml-1">
                                                    <%= session.venue %>
                                                </span>
                                            </div>
                                            <div class="mb-2">
                                                <span class="font-bold">Number of Teams:</span>
                                                <span class="ml-1">
                                                    <%= session.teamcount %>
                                                </span>
                                            </div>
                                            <div class="mb-2">
                                                <span class="font-bold">Number of Players:</span>
                                                <span class="ml-1">
                                                    <%= session.playercount %>
                                                </span>
                                            </div>
                                            <div class="mb-2">
                                                <span class="font-bold">Player Names:</span>
                                                <span class="ml-1">
                                                    <%= session.playernames %>
                                                </span>
                                            </div>
                                            <div class="mb-2">
                                                <span class="font-bold">Time:</span>
                                                <span class="ml-1">
                                                    <%= session.time.toLocaleString('en-US', { weekday: 'long' ,
                                                        month: 'long' , day: 'numeric' , year: 'numeric' ,
                                                        hour: 'numeric' , minute: 'numeric' , hour12: true }) %>
                                                </span>
                                            </div>
                                            <div class="mb-2">
                                                <span class="font-bold">Organizer:</span>
                                                <% const organizerIndex=userIds.indexOf(session.userId); %>
                                                    <span class="ml-1">
                                                        <%= organizerIndex !==-1 ? usernames[organizerIndex]
                                                            : 'Unknown Organizer' %>
                                                    </span>
                                            </div>
                                            <div class="text-center text-green-500 font-bold">Joined</div>
                                        </div>
                                        <% } %>
                                            <% } %>
                                                <% }); %>
                </div>
                <% } %>
    </div>
</body>

</html>