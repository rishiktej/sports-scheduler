<!-- mysessions.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <title>
        <%= title %>
    </title>
    <style>
        /* Custom styles for mysessions.ejs */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #ffffff;
            box-shadow: 0 0 10px skyblue;
            border-radius: 4px;
            overflow: hidden;
        }

        th,
        td {
            padding: 12px 15px;
            text-align: left;
        }

        th {
            background-color: skyblue;
            font-weight: bold;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        h1 {
            text-align: center;
            color: #333333;
            margin-bottom: 20px;
        }

        .no-sessions {
            text-align: center;
            font-style: italic;
            color: #888888;
            margin-top: 20px;
        }

        .empty-slots {
            font-size: 12px;
            color: #888888;
            display: inline-block;
            margin-left: 10px;
        }

        .cancel-link {
            color: red;
            cursor: pointer;
        }

        .reason-input {
            display: none;
            margin-top: 10px;
        }

        .reason-input input {
            margin-right: 10px;
            padding: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        .reason-input button {
            padding: 5px 10px;
            border-radius: 4px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

        .cancelled-session {
            opacity: 0.5;
        }

        .cancelled-reason {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="container">
        <h1>
            <%= title %>
        </h1>

        <% if (data.length===0) { %>
            <p class="no-sessions">No sessions available.</p>
            <% } else { %>
                <% data.forEach(session=> { %>
                    <h2>
                        <%= session.sport_name %>
                    </h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Venue</th>
                                <th>Number of Teams</th>
                                <th>Number of Players</th>
                                <th>Player Names</th>
                                <th>Time</th>
                                <th>Organizer</th>
                                <th>Available Slots</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr <% if (session.cancel_status) { %>class="cancelled-session"<% } %>>
                                    <td>
                                        <%= session.venue %>
                                    </td>
                                    <td>
                                        <%= session.teamcount %>
                                    </td>
                                    <td>
                                        <%= session.playercount %>
                                    </td>
                                    <td>
                                        <%= session.playernames %>
                                    </td>
                                    <td>
                                        <%= session.time.toISOString() %>
                                    </td>
                                    <td>
                                        <%= username %>
                                    </td>
                                    <td>
                                        <% const emptySlots=session.playercount - (session.playernames ?
                                            session.playernames.split(',').length : 0); %>
                                            <% if (emptySlots> 0) { %>
                                                <span class="empty-slots">
                                                    <%= emptySlots %> empty slots
                                                </span>
                                                <% } else { %>
                                                    <span class="empty-slots">No slots available</span>
                                                    <% } %>
                                    </td>
                                    <td>
                                        <% if (!session.cancel_status) { %>
                                            <a class="cancel-link"
                                                onclick="toggleReasonInput('<%= session.id %>')">Cancel</a>
                                            <% } else { %>
                                                Cancelled
                                                <% } %>
                                                    <div class="reason-input" id="reason-input-<%= session.id %>">
                                                        <input type="text" placeholder="Reason" />
                                                        <button
                                                            onclick="cancelSession('<%= session.id %>')">Submit</button>
                                                    </div>
                                    </td>
                            </tr>
                        </tbody>
                    </table>
                    <% if (session.cancel_status) { %>
                        <p class="cancelled-reason">Reason: <%= session.cancelled_reason %>
                        </p>
                        <% } %>
                            <% }); %>
                                <% } %>

                                    <script>
                                        var token = document
                                        .querySelector('meta[name="csrf-token"]')
                                        .getAttribute("content");

                                        function toggleReasonInput(sessionId) {
                                            const reasonInput = document.getElementById(`reason-input-${sessionId}`);
                                            reasonInput.style.display = reasonInput.style.display === 'none' ? 'block' : 'none';
                                        }

                                        function cancelSession(sessionId) {
                                            const reasonInput = document.getElementById(`reason-input-${sessionId}`);
                                            const reason = reasonInput.querySelector('input').value;

                                            fetch(`/cancel-session?sessionId=${sessionId}&reason=${encodeURIComponent(reason)}`, {
                                                method: 'POST',
                                                headers: {
                                                    'Content-Type': 'application/json',
                                                    // Add any required headers for authentication or CSRF protection
                                                },
                                                body: JSON.stringify({
                                                    "_csrf": token
                                                })
                                            })
                                                .then(res => {
                                                    if (res.ok) {
                                                         window.location.reload();
                                                        
                                                    } else {
                                                        // Handle non-successful response, e.g., display an error message
                                                        console.error('Failed to cancel session');
                                                    }
                                                })
                                                .catch(error => {
                                                    // Handle any errors that occur during the request
                                                    console.error('Error cancelling session:', error);
                                                });
                                        }
                                    </script>
    </div>
</body>

</html>